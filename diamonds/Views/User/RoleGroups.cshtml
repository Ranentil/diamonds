@model IEnumerable<Diamonds.Models.Entities.RoleGroup>
@{
    ViewBag.Title = "Lista grup";
}

@Html.Partial("_NavigationBar", new Diamonds.Models.NavigationModel("User", "Role Groups", "No"))

@Html.Partial("_LeftMenuPartial")

<fieldset>
    <legend>Lista grup</legend>

    <table>
        <tr>
            <th>Kod</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.ActionLink("Uprawnienia", "RoleGroupEdit", new { id = item.id }) |
                @Html.ActionLink("Usuń", "RoleGroupDelete", new { id = item.id })
            </td>
        </tr>
        }
    </table>
</fieldset>