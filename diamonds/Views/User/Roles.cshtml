@model IEnumerable<Diamonds.Models.Entities.Role>
@{
    ViewBag.Title = "Roles";
}

@Html.Partial("_NavigationBar", new Diamonds.Models.NavigationModel("User", "Roles", "No"))

@Html.Partial("_LeftMenuPartial")

<fieldset>
    <legend>Role</legend>

    <table class="violet">
        <tr>
            <th>kod</th>
            <th>nazwa</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.code)
            </td>
            <td>
                @Html.DisplayFor(m => item.name)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "RoleEdit", new { id = item.roleId }) @*|
                @Html.ActionLink("Usuń", "RoleDelete", new { id = item.roleId })*@
            </td>
        </tr>
        }

    </table>
</fieldset>