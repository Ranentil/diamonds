<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="utf-8" />
        <title>Warsaw Diamonds - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/default")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="@Url.Action("Index", "Home", null)"><img src="@Url.Content("~/Content/images/layout/logo.png")" /></a></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Drużyna", "Index", "Team")
                                <ul>
                                    <li>@Html.ActionLink("Rekrutacja", "Index", "Team")</li>
                                    <li>@Html.ActionLink("Historia drużyny", "Index", "Team")</li>
                                    <li>@Html.ActionLink("Skład", "Index", "Team")</li>
                                    <li>@Html.ActionLink("Wyniki", "Index", "Team")</li>
                                    <li>@Html.ActionLink("Boisko", "Index", "Team")</li>
                                    <li>@Html.ActionLink("Dokumenty", "Index", "Team")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Galeria", "Index", "Gallery")</li>
                            <li>@Html.ActionLink("Softball", "Index", "Home")
                                <ul>
                                    <li>@Html.ActionLink("Czym jest softball?", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Prezentacja zasad", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Słownik", "Index", "Home")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Sponsor", "Sponsor", "Home")
                                <ul>
                                    <li>@Html.ActionLink("Oferta", "Index", "Home")</li>
                                    <li>@Html.ActionLink("1% podatku", "Index", "Home")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="featured-photos">
            <ul>
                <li style="background-image:url('@Url.Content("~/Content/images/slider/photo1.jpg")')"></li>
                <li style="background-image:url('@Url.Content("~/Content/images/slider/photo2.jpg")')"></li>
                <li style="background-image:url('@Url.Content("~/Content/images/slider/photo3.jpg")')"></li>
            </ul>
        </div>
        <div id="body">
            <section class="message">
                @if (TempData["Message"] != null)
                {
                    <div class="message-success">@TempData["Message"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="message-error">@TempData["Error"]</div>
                }
            </section>
            <section class="main-content content-wrapper clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Warsaw Diamonds</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

        <link href="@Url.Content("~/Content/jquery.bxslider.css")" rel="stylesheet" />
        <script src="@Url.Content("~/Scripts/jquery.bxslider.min.js")" type="text/javascript"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                $("ul#menu li").hover(function () {
                    $(this).children('ul').hide();
                    $(this).children("ul").slideDown("fast");
                },
                function () {
                    $('ul', this).slideUp("fast");
                });

                $("#featured-photos ul").bxSlider();
            });
        </script>

    </body>
</html>
