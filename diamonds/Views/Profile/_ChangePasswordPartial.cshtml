@model Diamonds.Models.LocalPasswordModel

@using (Html.BeginForm("Edit", "Profile")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>@ViewBag.Lang["login-zmiana-hasla"]</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.OldPassword, (string)ViewBag.Lang["login-obecne-haslo"])
                @Html.PasswordFor(m => m.OldPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.NewPassword, (string)ViewBag.Lang["login-nowe-haslo"])
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword, (string)ViewBag.Lang["login-za-krotkie-haslo"])
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword, (string)ViewBag.Lang["login-potwierdzenie-hasla"])
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m=> m.ConfirmPassword, (string)ViewBag.Lang["login-hasla-nie-sa-takie-same"])
            </li>
        </ol>
        <input type="submit" value="@ViewBag.Lang["login-zmien"]" />
    </fieldset>
}
